// Simple CandyCrush game (Java)
// I have created a simple game format known as CandyCrush

import java.util.Scanner;
import java.util.Random;
public class CandyCrush {
public static void main(String[]args) {
	Scanner input = new Scanner(System.in);
	Random r = new Random();
	int[] ary = {1,2,3,4,5,6,7,8,9};		// Including an array for elements to be chose from , Later it is used with random i such as ary[i] is random

	int h = 3;	//input.nextInt();
	int w = 5;	//input.nextInt();
	int b = 6;  //input.nextInt();
	int types = 5;	// Creating a changable int, 5 would mean 5 types of candies

	for(int i=0; i<h+b; i++) {
		if(i==b) {						// Creating the Buffer line
			for(int m=0; m<w; m++){
				System.out.print("-");
				}
				System.out.println();
		}
	for(int j=0; j<+w; j++) {
		System.out.print(ary[r.nextInt(types)]);		// Printing the elements(or candy) in the game , Random generated in porportion to types amount
			}
		System.out.println();
		      }
          
    }
}
